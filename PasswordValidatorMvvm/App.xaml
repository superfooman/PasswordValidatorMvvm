<Application x:Class="PasswordValidatorMvvm.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PasswordValidatorMvvm"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="GeneralButtonColor" Color="Orange"/>
        <SolidColorBrush x:Key="GeneralDisplayColor" Color="White"/>

        <Style TargetType="Button" x:Key="GeneralButtonStyle">
        <Setter Property="Foreground" Value="{StaticResource GeneralDisplayColor}"/>
        <Setter Property="Background" Value="{StaticResource GeneralButtonColor}"/>
        <Setter Property="Width" Value="200"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Margin" Value="10"/>
        </Style>
    </Application.Resources>
</Application>
